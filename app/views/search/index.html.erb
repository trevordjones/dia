<div class="text-center">
  <p>Powered by</p>
  <%= image_tag('yelp', class: 'brand-logo-red-bg') %>
  <%= form_tag('/', method: :get) do %>
    <div class="search-input clearfix">
      <div class="form-group">
        <%= text_field_tag :search, nil, { class: 'form-control', placeholder: 'Search' } %>
      </div>
      <div class="form-group pull-right">
        <%= link_to 'Clear', root_path, class: 'btn btn-default' %>
        <%= button_tag 'Search', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>

  <% (@search.try(:[], 'businesses') || []).each do |item| %>
    <div class="well list-item">
      <p><%= item['name'] %></p>
      <img src="<%= item['image_url'] %>" alt="" height="250" width"250">
      <div class="rating" data-rating="<%= item['rating'] %>">
        <i class="star-1">★</i>
        <i class="star-2">★</i>
        <i class="star-3">★</i>
        <i class="star-4">★</i>
        <i class="star-5">★</i>
      </div>
      <p><%= item['review_count'] %> Reviews</p>
    </div>
  <% end %>
</div>
